<script type="text/javascript">
function ajaxCheck(url, data, callBack) {
	var XHR;
	var date = new Date();
	try {
		try{
			XHR=new ActiveXObject("Microsoft.XMLHTTP");
		}catch(e){
			try{
				XHR=new XMLHttpRequest();
			} catch (e){ }
		}
		XHR.open("POST",url+"?_r="+date.getTime());
		XHR.setRequestHeader("Content-Type","application/x-www-form-urlencoded");
		XHR.onreadystatechange = function(){
			if(XHR.readyState==4) {
				if(XHR.status==200) {
					if(callBack) callBack(XHR.responseText);
				}
			}
		}
		XHR.send(data);
	}catch (e) {
		alert(e.message);
	}
}

function con_code() {
	var random = Math.floor( Math.random()*100000000 ) ;
	document.getElementById("check_img").src = "http://login.sina.com.cn/cgi/pin.php?r=" + random + "&s=0";
}

/*检查用户填写登录名是否有邮箱*/
function checkUserMail( nameInput){
	if( nameInput.value == ""){
		return true;
	}
	/*如果是全数字帐号，就不查是否有邮箱了，因为分不出是uc号还是免费会员号，容易造成用户困扰*/
	var r = /^[0-9]{1,9}$/;
	if ( r.exec( nameInput.value)){
		return true;
	}

	var msg = "";
	var url = "http://login.sina.com.cn/bindmail/checkmailuser.php";
	ajaxCheck(location.protocol == "https:" ? url.replace(/^http:/, "https:") : url,"name="+encodeURIComponent(nameInput.value)+"&type=json",function(res){
		var data = eval('('+res+')');
		if(data.ret == "y") {
			msg = '<font color=#333333>为了您的帐号安全，请<a href="/bindmail/signin.php?username=' +nameInput.value+ '">绑定邮箱</font></a>';
		} else if(data.ret == "n" && data.mail) {
			if (data.errcode == 'not_verify') {
				msg = '<font color=#333333>您的邮箱: '+data.mail+' 未验证，点此<a href="/bindmail/bindmail1.php?entry=sso&user='+data.mail+'">重发验证邮件</font></a>';
			} else {
				msg = '<font color=#333333>用您的邮箱</font><P></P><font color=#087AD3><P>';
				var len = data.mail.length;
				var size=24;
				if( len < size){
					msg += data.mail;
				}
				else{
					var a = Math.floor(len/size);
					var i;
					for( i=0;i<a;i++){
						msg += '<P>'+data.mail.substring( i*size,i*size+size)+'</P>';
					}
					msg += '<P>'+data.mail.substring( i*size);
				}
				msg += '</P></font><font color=#333333>也可以登录</font>';
			}
		}
		if ( msg != "")
		{
			custom_alert("username", msg);
		}
	});
}

/*判断依据需求自定*/
function check() { 
	var username = document.getElementById('username').value; 
	var password = document.getElementById('password').value;
	var door = document.getElementById('door'); 
	var vsncode = document.getElementById('vsncode'); 
	if (username == "" || username == "微博帐号/邮箱/博客") { 
		custom_alert("username", "登录名不能为空"); 
		return false; 
	} 
	if (password == "") { 
		custom_alert("password", "密码不能为空"); 
		return false; 
	} 
	if(door.disabled != true &&  door.value == "" ) {
		custom_alert("door", "验证码不能为空"); 
		return false; 
	}
	if (vsncode.disabled != true && vsncode.value == "") { 
		custom_alert("vsncode", "动态码不能为空"); 
		return false; 
	} 
	if (location.protocol == "https:") { 
		sinaSSOController.crossDomain = false; 
	}
	sinaSSOController.loginExtraQuery = {};
	if( door && door.value ) {
		sinaSSOController.loginExtraQuery.door = door.value;
	} 
	sinaSSOController.loginExtraQuery.vsnf = 1;
	if( vsncode && vsncode.value  ) {                                                                       
		sinaSSOController.loginExtraQuery.vsnval = vsncode.value;                                                                                   
	}  
	sinaSSOController.setLoginType(sinaSSOController.loginType | 2);
	if( document.getElementById("save_btn").checked ) {
		sinaSSOController.login(username, password, 30);
	}else{
		sinaSSOController.login(username, password);
	}
	return true; 
} 
(function () {
	function $(id) {
		var obj = null;
		if(typeof(id)=='object') obj = id;
		else obj = document.getElementById(id);
		if(!obj) return null;
		return obj;
	}
	function onReady(fn) {
		if (typeof fn != "function") return;
		if (window.addEventListener) {
			window.addEventListener("load", fn, false);
		}else {
			window.attachEvent("onload", fn);
		}
	}
	function set_ns(ns, func) {
		var root = window;
		var ns_p = ns.split(".");
		var current;
		for(var i=0; i<ns_p.length; i++) {
			current = ns_p[i];
			if (!root[current]) {
				root[current] = {};
			}
			if (i == ns_p.length - 1) {
				root[current] = func;
				return;
			}
			root = root[current];
		}
	}
	function addListener(node, type, fn) {
		if(node.addEventListener) node.addEventListener(type,fn,false);
		else node.attachEvent('on' + type,fn);
		return node;
	}
	function hasClass(node, className) {
		var elementClassName = node.className;
		return (elementClassName.length > 0 && (elementClassName == className || new RegExp("(^|\\s)" + className + "(\\s|$)").test(elementClassName)));
	}
	function addClass(node, className) {
		if(!hasClass(node, className)) node.className += (node.className ? ' ' : '') + className;
	}
	function delClass(node, className) {
		node.className = node.className.replace(new RegExp("(^|\\s+)" + className + "(\\s+|$)"), ' ').replace(/(^\s*)|(\s*$)/g, '');
	}
	function show_tip(node) {
		node.style.display = "";
		opacity(node, 0, 100);
	}
	
	var browser = navigator.userAgent.toLowerCase();
	var isIE = /msie/.test(browser);
	var aid = 0;
	var thread = null;
	function stop() {
		thread = null;
	}
	function opacity_a(id, o, start, end, speed, func) {
		if (typeof(window["opacity__"+ id]) != "undefined") clearTimeout(window["opacity__"+ id]);
		var op = Math.abs(start - end);
		if (op == 0) {
			if (func) func();
			if (end == 0) o.style.display = 'none';
			window["opacity__"+ id] = null;
			stop();
			return;
		}
		var opd = speed;
		if (op < speed) opd = op;
		if (start > end) opd *= -1;
		var opm = start + opd;
		if (isIE) o.style.filter = "alpha(opacity="+ opm +")";
		else o.style.opacity = opm / 100;
		window["opacity__"+ id] = window.setTimeout(function(){opacity_a(id, o, opm, end, speed, func)}, 50);
	}
	function opacity(o, start, end, speed, func) {
		if (typeof(o) != "object") o = $(o);
		if (!o) return;
		if (typeof(start) != "number" || typeof(end) != "number") return;
		if (start > 100) start = 100;
		if (start < 0) start = 0;
		if (end > 100) end = 100;
		if (end < 0) end = 0;
		if (start == 0) {
			if (isIE) o.style.filter = "alpha(opacity="+ 0 +")";
			else o.style.opacity = 0;
		}
		speed = typeof(speed) == "number" ? speed : 20;
		var _aid = aid + 1;
		opacity_a(_aid, o, start, end, speed, func);
	}
	
	function init() {
		try {
			var username_node = $("username");
			var password_node = $("password");
			var vcode_node = $("door");
			var vsncode = $("vsncode");
			if (username_node) {
				addListener(username_node, "focus", function(e){
					addClass(username_node, "ipt-active");
					delClass(username_node, "ipt-c");
					if (username_node.value == "微博帐号/邮箱/博客") username_node.value = "";
					try {
						delClass(username_node, "ipt-error");
						$("username_tip").style.display = "none";
					}catch (e) {}
				});
				addListener(username_node, "blur", function(e){
					delClass(username_node, "ipt-active");
					if (username_node.value == "") {
						username_node.value = "微博帐号/邮箱/博客";
						addClass(username_node, "ipt-c");
					}
				});
			}
			if (password_node) {
				addListener(password_node, "focus", function(e){
					addClass(password_node, "ipt-active");
					try {
						delClass(password_node, "ipt-error");
						$("password_tip").style.display = "none";
					}catch (e) {}

					// 消除readonly
					if (password_node.getAttribute('readonly')) {
						password_node.removeAttribute('readonly');
					}
				});
				
				addListener(password_node, "blur", function(e){
					delClass(password_node, "ipt-active");
				});
			}
			if (vcode_node) {
				addListener(vcode_node, "focus", function(e){
					addClass(vcode_node, "ipt-active");
					try {
						delClass(vcode_node, "ipt-error");
						$("door_tip").style.display = "none";
					}catch (e) {}
				});
				addListener(vcode_node, "blur", function(e){
					delClass(vcode_node, "ipt-active");
				});
			}
			if (vsncode) {                                                                                               
				addListener(vsncode, "focus", function(e){                                                              
					addClass(vsncode, "ipt-active");                                                                
					try {                                                                                              
						delClass(vsncode, "ipt-error");                                                         
						$("vsncode_tip").style.display = "none";                                                      
						}catch (e) {}                                                                                      
				});                                                                                                        
				addListener(vsncode, "blur", function(e){                                                               
					delClass(vsncode, "ipt-active");                                                                
				});                                                                                                        
			}
		}catch (e) {
			throw("node lossed, init fail.");
		}
	}
	onReady(function(){
		init();
	});
	/*
	type - username/password/vcode
	content - alert content.
	*/
	function custom_alert(type, content) {
		$(type + "_tip_text").innerHTML = content;
		show_tip( $(type + "_tip") );
		addClass($(type), "ipt-error");
	}
	set_ns("custom_alert", custom_alert);
	
	function bindfunc(f,bind){
		return function(){
			f.apply(bind, Array.prototype.slice.call(arguments))
		};
	}
	
	/*
	 * @create 2010-01-04
	 * @desc 安全登录提示 
	 */
	(function(){

		var saft_tip = {
			init:function(){
				this.els = {
					el:$('safe_login'),
					label:$('safe_login_label'),
					tip:$('safe_login_tip')
				};
				this.bound = {
					show:bindfunc(this.show,this),
					hide:bindfunc(this.hide,this)
				};
				this.attach();
			},
			attach:function(){
				var arr = ['el','label'];
				for(var i=arr.length-1;i>=0;i--){
					var el = this.els[arr[i]];
					addListener(el,'mouseover',this.bound.show);
					addListener(el,'mouseout',this.bound.hide);
				}
			},
			show:function(){
				this.set('tip','display','');
			},
			hide:function(){
				this.set('tip','display','none');
			},
			set:function(id,key,val){
				var el = this.els[id];
				if(el){ el.style[key] = val;}
			}
		};
		
		saft_tip.init();
		
	})();

})();
</script>
