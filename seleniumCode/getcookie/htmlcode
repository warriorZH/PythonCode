	function changeLoginType() {
		var chk_safe_login = document.getElementById('safe_login');
		if (!chk_safe_login.checked) {
			sinaSSOController.getServerTime();
		}
		sinaSSOController.setLoginType(chk_safe_login.checked?1:2);
	}
	var chk_safe_login = document.getElementById('safe_login');
	if (chk_safe_login) {
		chk_safe_login.onclick = changeLoginType;
	}
	changeLoginType();
	var userinfo = sinaSSOController.getLoginInfo();
	if( userinfo && userinfo['ln'] ) {
		document.getElementById("username").value = userinfo['ln'];
	}
</script>
